{
  "info": {
    "name": "üìÖ Anastasia Appointment Module",
    "_postman_id": "appointment-module-anastasia",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "üìÜ Create Appointment (Public)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Jane Doe\",\n  \"email\": \"jane@example.com\",\n  \"phone\": \"+49123456789\",\n  \"serviceType\": \"Aromatherapy\",\n  \"note\": \"Please use lavender oil.\",\n  \"date\": \"2025-04-10\",\n  \"time\": \"14:00\",\n  \"service\": \"{{serviceId}}\"\n}"
        },
        "url": {
          "raw": "{{url-anastasia}}/appointments",
          "host": ["{{url-anastasia}}"],
          "path": ["appointments"]
        }
      }
    },
    {
      "name": "üìã Get All Appointments (Admin)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{url-anastasia}}/appointments",
          "host": ["{{url-anastasia}}"],
          "path": ["appointments"]
        }
      }
    },
    {
      "name": "üîç Get Appointment by ID (Admin)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{url-anastasia}}/appointments/{{appointmentId}}",
          "host": ["{{url-anastasia}}"],
          "path": ["appointments", "{{appointmentId}}"]
        }
      }
    },
    {
      "name": "‚úÖ Update Appointment Status (Admin)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"confirmed\"\n}"
        },
        "url": {
          "raw": "{{url-anastasia}}/appointments/{{appointmentId}}/status",
          "host": ["{{url-anastasia}}"],
          "path": ["appointments", "{{appointmentId}}", "status"]
        }
      }
    },
    {
      "name": "üóëÔ∏è Delete Appointment (Admin)",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{url-anastasia}}/appointments/{{appointmentId}}",
          "host": ["{{url-anastasia}}"],
          "path": ["appointments", "{{appointmentId}}"]
        }
      }
    }
  ]
}
