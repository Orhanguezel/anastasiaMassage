            "type": "text"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Orhan K√∂nig\",\n  \"email\": \"orhan@example.com\",\n  \"phone\": \"+491234567890\"\n}"
        },
        "url": {
