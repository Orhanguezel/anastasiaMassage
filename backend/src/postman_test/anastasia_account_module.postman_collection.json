  "item": [
    {
      "name": "üìÑ Get My Profile",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{url-anastasia}}/account/me",
          "host": ["{{url-anastasia}}"],
          "path": ["account", "me"]
        }
      }
    },
    {
