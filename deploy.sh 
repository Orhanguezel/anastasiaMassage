#!/bin/bash

echo "📥 Pulling from GitHub..."
git fetch origin
git reset --hard origin/main

echo "🔧 Updating backend..."
cd backend
npm install
npm run build
pm2 restart anastasia-backend

echo "🎨 Updating frontend..."
cd ../frontend
npm install
npm run build
pm2 restart anastasia-frontend

echo "✅ Deployment complete!"
